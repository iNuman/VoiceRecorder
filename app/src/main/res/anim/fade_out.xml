<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

<!--Only Thing We had to Do to Apply These
Animations is Add these in Navigation graph inside action tag-->
    <!--Opacity-->
    <alpha
        android:duration="400"
        android:fromAlpha="1"
        android:toAlpha="0" />

    <!--Scale Type-->
    <scale
        android:duration="400"
        android:fromXScale="100%"
        android:fromYScale="100%"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="40%"
        android:toYScale="40%" />
</set>